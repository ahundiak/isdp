# Adjust for each new version
SP=aim262_08
SPHOME=$AIM/sp262/sp
MD="y"
MSP="y"

if [ $MD = "y" ] ; then

	echo "MAKING DIRECTORY STRUCTURE"

	cd $SPHOME
	mkdir $SP
	cd $SPHOME/$SP
	mkdir config
	mkdir data
	mkdir ppl

	cd $SPHOME/$SP/config
	mkdir dload
	mkdir english

	cd $SPHOME/$SP/config/dload
	mkdir corrections
	cd $SPHOME/$SP/config/dload/corrections
	mkdir aim

	cd $SPHOME/$SP/config/english
	mkdir forms

	cd $SPHOME/$SP/data
	mkdir vds

	cd $SPHOME/$SP/ppl
	mkdir bin
fi


if [ $MSP = "y" ] ; then

	echo "STARTING SP"

	echo "COPYING PPL/BIN FOLDER"
	# Copy new .e to the sp folders
	cp $AIM/ppl/bin/* $SPHOME/$SP/ppl/bin

	echo "CREATING .so FILES IN THE CORRECTIONS FOLDER"
	# Create the .so files and put them in the sp directory 
	#ld -z text -G -o $SPHOME/$SP/config/dload/corrections/aim/AVDsimilar.so $AIM/src/lib/AVDsimilar.o
	ld -z text -G -o $SPHOME/$SP/config/dload/corrections/aim/AVDaim_cm.so $AIM/src/lib/AVDaim_cm.o
	ld -z text -G -o $SPHOME/$SP/config/dload/corrections/aim/AimSir.so $AIM/src/lib/AimSir.o
	ld -z text -G -o $SPHOME/$SP/config/dload/corrections/aim/PostCmd.so $AIM/src/lib/PostCmd.o

	#
	# Copy over other files
	#

	echo "COPYING ENGLISH/FORMS FOLDER"
	# FORMS
	cp $AIM/config/english/forms/* $SPHOME/$SP/config/english/forms/

	echo "COPYING DATA/VDS FOLDER"
	# ddl's
	cp $AIM/vddb/data/vds/* $SPHOME/$SP/data/vds

	echo "COPYING MOTD.AIM AND READEME FIL "
	# readme and motd
	cp $AIM/config/motd.aim $SPHOME/$SP/config/motd.aim
	cp $AIM/config/README.aim $SPHOME/$SP/config/README.aim
	cp $AIM/config/load_order.txt $SPHOME/$SP/config/dload/corrections/aim/load_order.txt

fi

echo "CREATING .cpio FILE"
# Make the tar and cpio files
cd $SPHOME/$SP
find . -print | cpio -o | compress > $SPHOME/deliver/$SP.p
cd -

echo "**********FINISHED**********"
