if [ $# -ne 2 ]
then
 echo 'Usage is:  BatchDad <File Name> <Server Name>'
 exit
fi
serv_name="AimServer="
par_token=","
count=0
for line in `cat $1` 
          do
		
		count=`expr $count + 1`
		if [ $count -eq 1 ]	
		then
		  echo $serv_name$2$par_token$line  > PdmInfoNew
		fi
		  if [ $count -ge 2 ]
		  then
		    echo $line > AuxFile
		    linecount=$count
		    CheckFile AuxFile $linecount $1 
		    if [ $? -ne 0 ]
		    then
		       var1=`echo $line | cut -d= -f2`
		       filename=`echo $var1 | cut -d, -f1`
          	       $EXNUC/bin/drive $MODEL/bin/Model -p Route -b -S $SP:$AV -f $filename -Cci=NonInteract 
		         if [ $? -eq 0 ]
		         then
		            exit 
		      	  fi 
                     fi
	          fi
	  done 
rm PdmInfoNew
rm AuxFile
