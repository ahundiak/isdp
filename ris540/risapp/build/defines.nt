###########################################################################
#
#				file:	 build\defines.nt
#
#		define the objects and directories to be used during the build
#		for NT system.
#
#		this file will be included into the makefiles in :
#			build, lib and bin
#
###########################################################################
!include $(RISDEVDIR)\ristools\include\makeenv.nt
###########################################################################

#
#	SOURCE
#
SOURCE_DIRS=		app\
					intrface\
					cpp

#
#	OBJECTS
#
CPP_OBJS=			$(RISDEVDIR)\risapp\cpp\$(OBJDIR)\*.obj
APP_OBJS=			$(RISDEVDIR)\risapp\app\$(OBJDIR)\*.obj
INTERFACE_OBJS=		$(RISDEVDIR)\risapp\intrface\$(OBJDIR)\*.obj

ARCH_OBJS=			$(RISDEVDIR)\riscom\arch\$(OBJDIR)\*.obj
COMMON_OBJS=		$(RISDEVDIR)\riscom\common\$(OBJDIR)\*.obj
NET_DNP_OBJS=		$(RISDEVDIR)\riscom\network\$(OBJDIR)\netdnp.obj
NET_LU62_OBJS=		$(RISDEVDIR)\riscom\network\$(OBJDIR)\netlu62.obj
NET_TCP_OBJS=		$(RISDEVDIR)\riscom\network\$(OBJDIR)\nettcp.obj \
					$(RISDEVDIR)\riscom\network\$(OBJDIR)\netwrapt.obj
NET_XNS_OBJS=		$(RISDEVDIR)\riscom\network\$(OBJDIR)\netxns.obj \
					$(RISDEVDIR)\riscom\network\$(OBJDIR)\netwrapx.obj
NET_DNP_DUM_OBJS=	$(RISDEVDIR)\riscom\network\$(OBJDIR)\netdnpdm.obj
NET_LU62_DUM_OBJS=	$(RISDEVDIR)\riscom\network\$(OBJDIR)\netl62dm.obj
NET_TCP_DUM_OBJS=	$(RISDEVDIR)\riscom\network\$(OBJDIR)\nettcpdm.obj
NET_XNS_DUM_OBJS=	$(RISDEVDIR)\riscom\network\$(OBJDIR)\netxnsdm.obj
NET_CORE_OBJS=		$(RISDEVDIR)\riscom\network\$(OBJDIR)\netgnerc.obj \
					$(RISDEVDIR)\riscom\network\$(OBJDIR)\netglobs.obj \
					$(RISDEVDIR)\riscom\network\$(OBJDIR)\netlen.obj \
					$(RISDEVDIR)\riscom\network\$(OBJDIR)\netlocal.obj \
					$(RISDEVDIR)\riscom\network\$(OBJDIR)\netmem.obj \
					$(RISDEVDIR)\riscom\network\$(OBJDIR)\netshare.obj \
					$(RISDEVDIR)\riscom\network\$(OBJDIR)\netumsg.obj \
					$(RISDEVDIR)\riscom\network\$(OBJDIR)\netwrap.obj

PARSE_OBJS=			$(RISDEVDIR)\riscom\parse\$(OBJDIR)\*.obj
PARSETPG_OBJS=		$(RISDEVDIR)\riscom\parsetpg\$(OBJDIR)\*.obj

#
#	LIBS
#
RIS_COMMON_LIB=		$(RISDEVDIR)\riscom\lib\$(LIBDIR)\riscom.lib

#
#	DLOAD
#
RIS_DLOAD_OBJS=		$(RISDEVDIR)\risapp\dload\$(OBJDIR)\*.obj 
RIS_TMP_DLOAD_OBJS=	dld*.obj 

#
#	RIS LIB OBJECTS - the objects used to create ris.lib
#
RISLIB_OBJS=	$(APP_OBJS) \
				$(INTERFACE_OBJS) \
				$(ARCH_OBJS) \
				$(COMMON_OBJS) \
				$(NET_CORE_OBJS) \
				$(NET_DNP_DUM_OBJS) \
				$(NET_LU62_DUM_OBJS) \
				$(NET_TCP_OBJS) \
				$(NET_XNS_DUM_OBJS)

#
#	EXECUTABLE OBJECTS - the objects used to create ris executables
#
RISCPP_OBJS=	$(CPP_OBJS) \
				$(PARSE_OBJS) \
				$(PARSETPG_OBJS) \
				$(RISDEVDIR)\risapp\intrface\$(OBJDIR)\interror.obj\
				$(RISDEVDIR)\risapp\intrface\$(OBJDIR)\intglobs.obj\
				$(RISDEVDIR)\risapp\app\$(OBJDIR)\appglobs.obj

#
#	LIB RESOURCES - the resources used to create ris libs
#
RISLIB_RESOURCES=		 $(RISDEVDIR)\risapp\resource\$(OBJDIR)\i9ris.res

#
#	EXECUTABLE RESOURCES - the resources used to create ris executables
#
RISCPP_RESOURCES=		 $(RISDEVDIR)\risapp\resource\$(OBJDIR)\riscpp.res

#
#	ARCHIVE LIBS - the libs used to generate ris.dll
#
RIS_DEPENDENT_LIBS= $(TCP_LIB) \
					$(RISUMS_LIB) \
					$(VERSION_LIB)

#
#	EXECUTABLE LIBS - the objects used to create ris executables
#
RISCPP_LIBS=	$(RIS_COMMON_LIB) \
				$(RISUMS_LIB) \
				$(MSTOOLSDIR)\lib\version.lib \
				$(MSTOOLSDIR)\lib\user32.lib \
				"$(SETUPSDK_DIR)\LICAPI\DLBRAND.LIB" \
				"$(SETUPSDK_DIR)\isdklib\isdk.lib"

#
#	EXECUTABLES
#
EXECUTABLES=	riscpp
