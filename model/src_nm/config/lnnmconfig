if [ $# = 0 ]     
 then
   echo 'Usage: lnnmconfig <product path>'
   echo 'Example: lnnmconfig $MODEL'
   exit
fi

echo 'Path to NM is '$NM''
NMCON=${NM}/config
NMENG=${NMCON}/english

	echo Linking message files to $1/config/english/messages directory
	ln ${NMENG}/messages/NM*	$1/config/english/messages/.


	echo Concatenating cmd_tbl_list to $1/config/cmd_tbl_list
	cat ${NMCON}/cmd_tbl_list  >>	$1/config/cmd_tbl_list


	echo Linking cmp files to $1/config directory
	ln ${NMCON}/NM*		$1/config/.


	echo Concatenating message_files to $1/config/english/message_file
	cat ${NMENG}/message_file >>	$1/config/english/message_file
		
	echo Done
