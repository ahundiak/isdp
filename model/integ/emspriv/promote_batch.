NHOME=/usr7/v24/ws_emspriv
echo "promoting from $1 to $NHOME"
while [ $# != 0 ]
 do
  if [ -d $1 ]
   then
    if [ -f $1/install.sh ] || [ -f $1/install.sun ]
     then
	cd $1
	echo "in ${PWD}"
	echo			
	echo
        bname=`basename $1`
	echo "copying $1/* to ${NHOME}/${bname}"
	ln * ${NHOME}/${bname}
	echo "finished"
	echo
	cd $NHOME
    else
     echo "$1 is not a newprodable directory"
    fi
  else
   echo "$1 does not exist"
  fi
  shift
done
