#include "ciminimum.h"
#include "cimacros.h"
#include "fi.h"
#include <stdio.h>
#include <string.h>

extern char *getenv();

main()
{
	double pt[3];
	struct FI_data_st formData;
        char   str[20], *atp_si_str;
	int    atp_si;

        strcpy(str, "ATP_SI");
        atp_si = 0;
        if ( (atp_si_str = getenv(str)) != NULL)
            if (strcmp(atp_si_str, "1") == 0)
                atp_si = 1;

	fprintf(stderr, "\nSWS1.LOG: \n\n");

	/*------------------------------------------*/
	/* iso window: set window shape to 581, 100 */
	/*------------------------------------------*/

	ci$put(string = "s w s");
	//"GRStWnSh" "Set Window Shape"

	ci$put(string = "top");

	formData.label = 20;
	formData.type = FI_INT;
	formData.index = 0;
	formData.max_index = 0;
	formData.select_flag = FI_EDIT_NOSELECT;
	formData.sts = 0;
	formData.value.ivalue = 100;
	ci$put (form = "GRSetWinShap",
		gadget = &formData);

	formData.label = 1;
	formData.type = FI_STATE;
	formData.index = 1;
	formData.max_index = 0;
	formData.select_flag = FI_EDIT_NOSELECT;
	formData.sts = 0;
	formData.value.state = 1;
	ci$put (form = "GRSetWinShap",
		gadget = &formData);

	ci$put(string = "s w d m");
	//"HSTgVDsMd" "Set Window Display Mode"

	ci$put(string = "iso");

	ci$put( cmd = "cl st");

//	ci$put(cmd = "ci=snapshot iso");

	if (atp_si)
 	    save_image("tmp/iso1.rgb", "iso");	

	/*--------------------------------------------*/
	/* iso window: set window shape to A-portrait */
	/*--------------------------------------------*/

	ci$put(string = "s w s");
	//"GRStWnSh" "Set Window Shape"

	pt[0] = 5.918914862743776;
	pt[1] = 0.0;
	pt[2] = 5.315962485876240;

	ci$put(point = pt,
		window_name = "iso");

	formData.label = 22;
	formData.type = FI_ALPHA;
	formData.index = 0;
	formData.max_index = 0;
	formData.select_flag = FI_EDIT_NOSELECT;
	formData.sts = 0;
	strcpy(formData.value.alpha,"A-portrait");
	ci$put (form = "GRSetWinShap",
		gadget = &formData);

	formData.label = 1;
	formData.type = FI_STATE;
	formData.index = 1;
	formData.max_index = 0;
	formData.select_flag = FI_EDIT_NOSELECT;
	formData.sts = 0;
	formData.value.state = 1;
	ci$put (form = "GRSetWinShap",
		gadget = &formData);

	ci$put( cmd = "cl st");

        if (atp_si)
	   save_image("tmp/iso2.rgb", "iso");	

//	ci$put(cmd = "ci=snapshot iso");

}


save_image(filename, win_name)
        char *filename, *win_name;
{ 
	ci$put(cmd = "s i");

	ci$put(string = filename);

	ci$put(string = "w");

	ci$put(string = win_name);

        ci$put(response = TERMINATE);
}
