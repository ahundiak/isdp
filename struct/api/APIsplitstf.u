#include "OMminimum.h"
#include "cieveryone.h"
#include "cievent.h"
#include "cilocate.h"
#include "cisend.h"
#include "vsAPImacros.h"

extern void printf() ;

extern OMuword	OPP_GRcurve_class_id,
		OPP_EMSplane_class_id ;

/*----------------------------------------------------------------------------*/
wakeup() { message( "API: Split stiffener" ) ; }
/*----------------------------------------------------------------------------*/
main() {
	long		 sts,
			 msg ;
	struct GRid	 stiffenerId,
			 cutterId,
			 splitId[2] ;
	struct GRmd_env  stiffenerEnv,
			 cutterEnv ;
	OM_S_CLASSLIST	 eligibleClasses ;
	OMuword		 cutterClasses[2] ;

	while( TRUE ) {
	ci$locate(
		prompt		= "Identify stiffener to split",
		classes 	= "VSstfBeam",
		properties	= LC_LC_ONLY | LC_DP_ONLY | LC_RW,
		owner_action	= LC_RIGID_COMP  |
				  LC_RIGID_OWNER | LC_FLEX_COMP |
				  LC_FLEX_OWNER  | LC_REF_OBJECTS,
		obj		= &stiffenerId.objid,
		osnum		= &stiffenerId.osnum,
		md_env		= &stiffenerEnv ) ;

	cutterClasses[0] = OPP_GRcurve_class_id ;
	cutterClasses[1] = OPP_EMSplane_class_id ;

	eligibleClasses.w_count   = 2 ;
	eligibleClasses.w_flags   = OM_CLST_subclass ;
	eligibleClasses.p_classes = cutterClasses ;

	ci$locate(
		prompt		= "Identify curve or plane cutter element",
		eligible_classes= &eligibleClasses,
		properties	= LC_LC_ONLY | LC_DP_ONLY | LC_RW,
		owner_action	= LC_RIGID_COMP  |
				  LC_RIGID_OWNER | LC_FLEX_COMP |
				  LC_FLEX_OWNER  | LC_REF_OBJECTS,
		obj		= &cutterId.objid,
		osnum		= &cutterId.osnum,
		md_env		= &cutterEnv ) ;

	sts = vs$split_stiffener( msg		= &msg,
			          stiffenerId	= &stiffenerId,
			          stiffenerEnv	= &stiffenerEnv,
			          cutterId	= &cutterId,
			          cutterEnv	= &cutterEnv,
			          splitId	= splitId ) ;

	if( !( sts & 1 & msg ) ) {
		printf( "Error to split stiffener : [%d,%d]\n", stiffenerId.osnum,
							        stiffenerId.objid ) ;
	} else {
		printf( "Split #0 : [%d,%d]\n", splitId[0].osnum, 
						splitId[0].objid ) ;
		printf( "Split #1 : [%d,%d]\n", splitId[1].osnum, 
						splitId[1].objid ) ;
		}
	}
}
