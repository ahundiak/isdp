#include "VDppl.h"
#include "VDgeom.h"
#include "VDefp.h"
#include "ci_mac_def.h"

#include "vsdbgmacros.h"


#define	MAX_TEMP	5
#define	MAX_FEET	6

TGRid	CI_MACRO_ID ;

extern	VScomputeVariable_Bevel() ;

/* ========================================================================= */
/* the main function is the one implementing the definition creation         */
/* ========================================================================= */
main()
{
	IGRlong		 msg ;
	IGRint		 temp_types[MAX_TEMP] ; 
	IGRchar		*temp_names[MAX_TEMP] ;
	IGRchar		*feet_names[MAX_FEET] ;
	GRobj		ci_mac_def1 ;

	temp_names[0] = "attributes" ;	temp_types[0] = gen_rg_collect ;
	temp_names[1] = "plate" ;	temp_types[1] = macro_generic ;
	temp_names[2] = "base_curve" ;	temp_types[2] = curve_generic ;
	temp_names[3] = "offset_curve";	temp_types[3] = curve_generic ;
	temp_names[4] = "point" ;	temp_types[4] = point_generic ;

	feet_names[0] = "attributes" ;
	feet_names[1] = "base_curve" ; 
	feet_names[2] = "offset_curve" ; 
	feet_names[3] = "label" ; 
	feet_names[4] = "stock_symb" ;
	feet_names[5] = "stock" ;

	ci_mac_def1 = NULL_OBJID;

	ac$cimacdef (	cimacdef          = ci_mac_def1,
			status            = &msg,
			name              = "VA_Bevel",
			temp_num          = MAX_TEMP,
			temp_names        = temp_names,
			temp_types        = temp_types,
			extern_feet_num   = MAX_FEET,
			extern_feet_names = feet_names );

	return msg ;
}

/* ========================================================================= */
compute ()
{

	IGRstat		retFlag;
	IGRstat		sts ;
	IGRlong		msg ;
	TGRobj_env	macOE ;
	TGRid		feetIDs[MAX_FEET] ;
	IGRint		feetCnt ;

#ifdef	DEBUG
	printf("Variable_Bevel - compute\n");
#endif

	retFlag = 0 ;

	macOE.obj_id  = CI_MACRO_ID ;
	macOE.mod_env = MOD_ENV ;

	sts = VScomputeVariable_Bevel(&macOE, MAX_TEMP, &feetCnt, feetIDs) ;
	if (!(sts & 1)) {
	  printf("Variable_Bevel - compute - VScomputeVariable_Bevel failed\n");
	  goto wrapup;
	}

	sts = ci$send (	msg	 = message  ci_macro.set_all_extern_feet
					( &msg, feetCnt, feetIDs, &MOD_ENV ),
			targetid = CI_MACRO_ID.objid,
			targetos = CI_MACRO_ID.osnum);
	if( !(sts&msg&1)) {
		goto wrapup;
	}

	retFlag = 1 ;
wrapup:

#ifdef	DEBUG
	printf("Variable_Bevel - compute - End\n");
#endif
	return retFlag ;
}

/* ========================================================================= */

place ()
{

	IGRstat		retFlag;
	IGRstat		sts ;
	IGRlong		msg ;
	TGRobj_env	macOE ;
	TGRid		feetIDs[MAX_FEET] ;
	IGRint		feetCnt ;

#ifdef	DEBUG
	printf("Variable_Bevel - place - Begin\n");
#endif

	retFlag = 0 ;

	macOE.obj_id  = CI_MACRO_ID ;
	macOE.mod_env = MOD_ENV ;

	sts = VScomputeVariable_Bevel(&macOE, MAX_TEMP, &feetCnt, feetIDs);
	if (!(sts & 1)) {
	   printf("Variable_Bevel - place - VScomputeVariable_Bevel failed\n");
	   goto wrapup;
	}

	sts = ci$send (	msg	 = message  ci_macro.set_all_extern_feet
					( &msg, feetCnt, feetIDs, &MOD_ENV ),
			targetid = CI_MACRO_ID.objid,
			targetos = CI_MACRO_ID.osnum);
	if( !(sts&msg&1)) {
		goto wrapup;
	}

	retFlag = 1 ;
wrapup:

#ifdef	DEBUG
	printf("Variable_Bevel - place - End\n");
#endif
	return retFlag ;
}

