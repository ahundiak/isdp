DATABASE training12

SCREEN SIZE 24 BY 80
{
                    ====================================
                    | RACEWAY WEIGHT CONTROL WORKSHEET |
                    ====================================

REQUEST BY          [f0 ]
DESCRIPTION         [f1                                      ]
		    [f2                                      ]

ASSEMBLY CATALOG    [f3                  ]
ASSEMBLY NAME       [f4                            ]
ASSEMBLY VERSION    [f5          ]
                                                       REFERENCE COORDINATE
SYSTEM NAME         [f6          ]                     ====================
ZONE NUMBER         [f7  ]                              L  [f10       ] MM
APPROVAL STATUS     [f8      ]                          T  [f11       ] MM
CONSTRUCTION STATUS [f9      ]                          V  [f12       ] MM
}
END

TABLES
rway_dynamic="nfmadmin".rway_dynamic

ATTRIBUTES
f0  = FORMONLY.rpt_request TYPE char,
      COMMENTS = "Enter your initials", REQUIRED;
f1  = FORMONLY.rpt_descript1 TYPE char, COMMENTS = "First description";
f2  = FORMONLY.rpt_descript2 TYPE char, COMMENTS = "Second description";
f3  = rway_dynamic.assembly_cat, COMMENTS = "Assembly catalog";
f4  = rway_dynamic.assembly_nam, COMMENTS = "Assembly name";
f5  = rway_dynamic.assembly_ver, COMMENTS = "Assembly version";
f6  = rway_dynamic.system_name,  COMMENTS = "System name";
f7  = rway_dynamic.zone_number,  COMMENTS = "Zone number";
f8  = rway_dynamic.apprv_stat,   COMMENTS = "Approval status";
f9  = rway_dynamic.constr_stat,  COMMENTS = "Construction status";
f10 = FORMONLY.def_lcog TYPE FLOAT, DEFAULT = 0.0, FORMAT = "------.---",
      COMMENTS = "Center of Gravity, lateral coordinate point";
f11 = FORMONLY.def_tcog TYPE FLOAT, DEFAULT = 0.0, FORMAT = "------.---",
      COMMENTS = "Center of Gravity, transversal coordinate point";
f12 = FORMONLY.def_vcog TYPE FLOAT, DEFAULT = 0.0, FORMAT = "------.---",
      COMMENTS = "Center of Gravity, vertical coordinate point";
END

INSTRUCTIONS
DELIMITERS "[]"
SCREEN RECORD sc_form ( FORMONLY.rpt_request,
			FORMONLY.rpt_descript1,
			FORMONLY.rpt_descript2,
		        rway_dynamic.assembly_cat,
		        rway_dynamic.assembly_nam,
                        rway_dynamic.assembly_ver,
		        rway_dynamic.system_name,
		        rway_dynamic.zone_number,
                        rway_dynamic.apprv_stat,
                        rway_dynamic.constr_stat,
			FORMONLY.def_lcog,
			FORMONLY.def_tcog,
			FORMONLY.def_vcog )
END
