#include "ciminimum.h"
#include "cimacros.h"
#include "igrdp.h"
#include "godef.h"
#include "go.h"
#include "growner.h"
#include "v_slcdef.h"
#include "v_pplslc.h"

extern printf();

struct GRid	OBJECT_ID;

main()
{
   IGRlong	msg;
   IGRint	ind, loc_type, loc_int;
   IGRdouble	loc_dbl;
   IGRchar 	loc_str[VD_K_tokMAX_SIZE];
   struct GRobj_env loc_obj;

	/*
	 * Get the two input arguments.
	 */

	loc_dbl = 0.0;
	vd$ppl_getarg_at_index( which_info = INPUT_INFO,
                                index	   = 0,
                                value      = &loc_obj   ); 

	vd$ppl_getarg_at_index( which_info = INPUT_INFO,
                                index	   = 1,
                                value      = &loc_dbl   );
	loc_dbl = loc_dbl/6.7;

	/*
	 * Set the two output arguments.
	 */

	vd$ppl_set_size(  which_info = OUTPUT_INFO,
			  size       = 2		);

	vd$ppl_setarg_at_index( which_info = OUTPUT_INFO,
                                index	   = 0,
                                type       = VD_double,
                                value      = &loc_dbl	);

	vd$ppl_setarg_at_index( which_info = OUTPUT_INFO,
                                index	   = 1,
                                type       = VD_string,
                                value      = loc_str	);
}
