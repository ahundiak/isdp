#
#	Build file for fontserve
#
setup
	all
		cd $SRC_DIR
		find fontserve -print | cpio -pmudvl ../SRC

depends
	all
		export	  GRA_BIN=$HOME/src/grautils/bin
		export	 ENVIRONV=$HOME/SRC/environv
		export	       EG=$HOME/SRC/environv/eg
		export	    ITEMS=$HOME/SRC/items
		export	ITEMS_INT=$HOME/SRC/items/itemsInt
		export  FONTSERVER=$HOME/SRC/fontserve
		export XFONTSERVER=$HOME/SRC/fontserve/Xfontserver

		cd $FONTSERVER/src/cfiles
		make Makefile

make
	all
		export	  GRA_BIN=$HOME/src/grautils/bin
		export	 ENVIRONV=$HOME/SRC/environv
		export	       EG=$HOME/SRC/environv/eg
		export	    ITEMS=$HOME/SRC/items
		export	ITEMS_INT=$HOME/SRC/items/itemsInt
		export  FONTSERVER=$HOME/SRC/fontserve
		export XFONTSERVER=$HOME/SRC/fontserve/Xfontserver
		export        HOST=$HOST
		export       LOGIN=$DEL_LOGIN
		export      DELDIR=HOME/ws_s
		export     RELEASE=$(<$FONTSERVER/del/Last.release)

		cd $ENVIRONV/del/setver
		make -f setver.mk
		cd $FONTSERVER/src/cfiles
		make minor

package
	#None

archive
	#None

deliver		
	#None
