###########################################################################
#
#				file:	 build\defines
#
#		define the objects and directories to be used during builds
#
#		this file will be included into the makefiles in :	build, lib
#
###########################################################################
!include $(RISDEVDIR)\ristools\include\makeenv.nt
###########################################################################

#
#	DIRECTORIES
#
SOURCE_DIRS=	clicom\
				client\
				dict\
				file\
				sql\
				trans\
				user\
				upgrade

#
#	EXECUTABLES
#
EXECUTABLES=	riscli.exe risupgrd.exe

#
#	LIBS
#
CLICOM_LIB=		$(RISDEVDIR)\riscli\clicom\$(OBJDIR)\clicom.lib
CLIENT_LIB=		$(RISDEVDIR)\riscli\client\$(OBJDIR)\client.lib
DICT_LIB=		$(RISDEVDIR)\riscli\dict\$(OBJDIR)\dict.lib
FILE_LIB=		$(RISDEVDIR)\riscli\file\$(OBJDIR)\file.lib
SQL_LIB=		$(RISDEVDIR)\riscli\sql\$(OBJDIR)\sql.lib
TRANS_LIB=		$(RISDEVDIR)\riscli\trans\$(OBJDIR)\trans.lib
USER_LIB=		$(RISDEVDIR)\riscli\user\$(OBJDIR)\user.lib
UPGRADE_OBJS=		$(RISDEVDIR)\riscli\upgrade\$(OBJDIR)\*.obj

ARCH_OBJS=		$(RISDEVDIR)\riscom\arch\$(OBJDIR)\*.obj
COMMON_LIB=		$(RISDEVDIR)\riscom\lib\$(LIBDIR)\riscom.lib
PARSE_OBJS=		$(RISDEVDIR)\riscom\parse\$(OBJDIR)\*.obj
PARSETPG_OBJS=	$(RISDEVDIR)\riscom\parsetpg\$(OBJDIR)\*.obj

NET_DNP_OBJ=    $(RISDEVDIR)\riscom\network\$(OBJDIR)\netdnp.obj
NET_LU62_OBJ=   $(RISDEVDIR)\riscom\network\$(OBJDIR)\netl62.obj
NET_TCP_OBJ=    $(RISDEVDIR)\riscom\network\$(OBJDIR)\nettcp.obj\
                $(RISDEVDIR)\riscom\network\$(OBJDIR)\netwrapt.obj
NET_XNS_OBJ=    $(RISDEVDIR)\riscom\network\$(OBJDIR)\netxns.obj\
                $(RISDEVDIR)\riscom\network\$(OBJDIR)\netwrapx.obj
NET_DNP_DUM_OBJ=$(RISDEVDIR)\riscom\network\$(OBJDIR)\netdnpdm.obj
NET_LU62_DUM_OBJ=$(RISDEVDIR)\riscom\network\$(OBJDIR)\netl62dm.obj
NET_TCP_DUM_OBJ=$(RISDEVDIR)\riscom\network\$(OBJDIR)\nettcpdm.obj
NET_XNS_DUM_OBJ=$(RISDEVDIR)\riscom\network\$(OBJDIR)\netxnsdm.obj
NET_CORE_OBJS=  $(RISDEVDIR)\riscom\network\$(OBJDIR)\netumsg.obj\
                $(RISDEVDIR)\riscom\network\$(OBJDIR)\netgnerc.obj\
                $(RISDEVDIR)\riscom\network\$(OBJDIR)\netglobs.obj\
                $(RISDEVDIR)\riscom\network\$(OBJDIR)\netlen.obj\
                $(RISDEVDIR)\riscom\network\$(OBJDIR)\netlocal.obj\
                $(RISDEVDIR)\riscom\network\$(OBJDIR)\netmem.obj\
                $(RISDEVDIR)\riscom\network\$(OBJDIR)\netshare.obj\
                $(RISDEVDIR)\riscom\network\$(OBJDIR)\netwrap.obj

NET_OBJS=		$(NET_CORE_OBJS) $(NET_TCP_OBJ) $(NET_LU62_DUM_OBJ) \
                $(NET_XNS_DUM_OBJ) $(NET_DNP_DUM_OBJ)
#
#	LIB OBJECTS - the objects used to create ris.lib
#
RISLIB_OBJS=	$(NET_OBJS) \
				$(ARCH_OBJS) \
				$(PARSE_OBJS) \
				$(PARSETPG_OBJS) \
				$(COMMON_LIB)

#
#	LIB LIBS - the libraries used to create ris.lib
#
RISLIB_LIBS=	$(CLIENT_LIB) \
				$(DICT_LIB) \
				$(FILE_LIB) \
				$(SQL_LIB) \
				$(TRANS_LIB) \
				$(USER_LIB) \
				$(CLICOM_LIB) \
				$(RISUMS_LIB)

#
#	EXECUTABLE LIBS- the libs used to create the ris executables
#
RIS_LIB=	$(RISDEVDIR)\risapp\lib\$(LIBDIR)\ris.lib
RISUPGRD_LIBS=		$(RIS_LIB) $(TCP_LIB) $(RISUMS_LIB)
#
# Libraries and object got from Microsoft to handle password security.
# Added by Grace 9/23/93
#
NT_SECURE_LIBS= $(RISDEVDIR)\riscli\ntextlib\ntdll.lib \
				$(RISDEVDIR)\riscli\ntextlib\lsadll.lib

