!include $(RISDEVDIR)\ristools\include\makeenv.nt

fast:
	@echo.
	@mk version
	@echo.
	@echo 	Making directory c
	@cd $(RISDEVDIR)\ristools\c
	@mk

	@echo.
	@echo.
	@echo 	Making directory mm
	@cd $(RISDEVDIR)\ristools\mm
	@mk

	@echo.
	@echo.
	@echo 	Making directory tpg
	@cd $(RISDEVDIR)\ristools\tpg
	@mk

	@cd $(RISDEVDIR)\ristools\build

subdirs:
	@echo.
	@echo 	Creating subdirectory mm\prt
	@-mkdir $(RISDEVDIR)\ristools\mm\prt 2>NUL

	@echo.
	@echo 	Creating subdirectory mm\$(OBJDIR)
	@-mkdir $(RISDEVDIR)\ristools\mm\$(OBJDIR) 2>NUL

	@echo.
	@echo 	Creating subdirectory tpg\prt
	@-mkdir $(RISDEVDIR)\ristools\tpg\prt 2>NUL

	@echo.
	@echo 	Creating subdirectory tpg\$(OBJDIR)
	@-mkdir $(RISDEVDIR)\ristools\tpg\$(OBJDIR) 2>NUL

	@echo.
	@echo 	Creating subdirectory bin
	@-mkdir $(RISDEVDIR)\ristools\bin 2>NUL

	@echo.
	@echo 	Creating subdirectory bin\$(TOOLSDIR)
	@-mkdir $(RISDEVDIR)\ristools\bin\$(TOOLSDIR) 2>NUL

version:
	@echo.
	@echo Making $(RISDEVDIR)\riscom\internal\risver.h
	@$(RISDEVDIR)\riscom\build\makevers
	@cd $(RISDEVDIR)\ristools\build

world:
	@mk cleanworld	
	@mk subdirs	
	@mk fast

cleanworld:
	@echo.
	@echo.
	@echo 	Cleaning directory c
	@cd $(RISDEVDIR)\ristools\c
	@mk cleanup

	@echo.
	@echo.
	@echo 	Cleaning directory mm
	@cd $(RISDEVDIR)\ristools\mm
	@mk cleanup

	@echo.
	@echo.
	@echo 	Cleaning directory tpg
	@cd $(RISDEVDIR)\ristools\tpg
	@mk cleanup

backuplist backlist:
	@bckup.bat -l

backupzip backzip:
	@bckup.bat -z

backuptree backtree:
	@bckup.bat -t
