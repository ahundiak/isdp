#include "ciminimum.h"
#include "cimacros.h"
#include "fi.h"
#include <stdio.h>
#include <string.h>

extern char *getenv();

main()
{
	double pt[3];
	struct FI_data_st formData;
        char   str[20], *atp_si_str;
	int    atp_si;

        strcpy(str, "ATP_SI");
    	if ( (atp_si_str = getenv(str)) == NULL)
	{
	    atp_si = 0;
	}
    	else
 	{
	    if (strcmp(atp_si_str, "1") == 0)
		atp_si = 1;
	    else
		atp_si = 1;
	}

	fprintf(stderr, "\nSEDD1.LOG: \n\n");

	/*-------------------------------------------------*/
	/* wf iso: Set display depth to -2,10 (orig=-9,17) */
	/*-------------------------------------------------*/

	ci$put(string = "se d d");
	//"GRSVDsDp" "Set Display Depths"

	ci$put(string = "-2");

	ci$put(string = "10");

	ci$put(string = "iso");

	ci$put( cmd = "cl st");

        ci$put(cmd = "ci=snapshot iso");

        if (atp_si)
            save_image("tmp/iso11.rgb", "iso");

	/*-------------------------------------------*/
	/* sm-shaded iso: Set dipslay depth to -5, 7 */
	/*-------------------------------------------*/

	ci$put(string = "s w d m");
	//"HSTgVDsMd" "Set Window Display Mode"

	ci$put(string = "iso");

	ci$put( cmd = "cl st");

	ci$put(string = "se d d");
	//"GRSVDsDp" "Set Display Depths"

	ci$put(string = "-5,7");

	ci$put(string = "iso");

	ci$put( cmd = "cl st");
                     
        ci$put(cmd = "ci=snapshot iso");

        if (atp_si)
            save_image("tmp/iso12.rgb", "iso");
}


save_image(filename, win_name)
        char *filename, *win_name;
{ 
	ci$put(cmd = "s i");

	ci$put(string = filename);

	ci$put(string = "w");

	ci$put(string = win_name);

        ci$put(response = TERMINATE);
}
                     
