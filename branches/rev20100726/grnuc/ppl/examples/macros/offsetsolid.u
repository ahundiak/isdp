#include "ciminimum.h"
#include "cimacros.h"
#include "ci_solid.h"

main()
{

        double          offset;
	IGRint		natnorm;
        struct GRid     IN_SOLID, OUT_SOLID;
        char ele_n[255];

        ci$locate( obj   = &IN_SOLID.objid,
                   osnum = &IN_SOLID.osnum,
                   classes = "EMSsolid",
                   prompt= "Identify non associative solid to offset");

        ci$get(value = offset, prompt="key in offset value");
	ci$get(value = natnorm, prompt="key in natural(1) OR other(0)");

        strcpy(ele_n, "offset_solid");
        md$place_solid_offset(
                        GRid_in  = IN_SOLID,     
                        GRid_out = &OUT_SOLID,
                        offset   = offset,
                        natural_normal = natnorm,
                //      name     = ele_n,
                        disp     = DRAW);

}
                         
