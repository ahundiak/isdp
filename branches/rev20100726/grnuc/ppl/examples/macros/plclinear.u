#include "stdio.h"
#include "ciminimum.h"
#include "cimacros.h"

#include "DIdef.h"
#include "grwireframe.h"

extern GRcreate_linestring();

main()
 {	
	IGRdouble	points[100],p2[3];
	IGRint	i,num_points,msg1;
 	struct GRid linear_object;
	IGRchar	line_name[DI_PATH_MAX];

	msg1= 1;
	num_points=0;
	for(i=0; msg1==1; i=i+3)
	{
 	    ci$get(point=p2 ,prompt="Enter point",rc=msg1);
	    if (msg1)
	    {
	      	points[i+0] = p2[0];
	      	points[i+1] = p2[1];
	      	points[i+2] = p2[2];
		num_points = num_points + 1;
	     }
	}
        strcpy(line_name,"line");

	gr$place_linear_object( 
		    msg = &msg1,
		    num_points  = num_points,
		    points   = points,
		    object_id = &linear_object,         
		    name     = line_name, 
		    display_flag     = 1);

}
