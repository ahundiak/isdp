set nocompatible
set path=.,/usr/include,/opt/ingr/bspmathdp/include,/opt/ingr/bspmathdp/include/prototypes,/opt/ingr/exnucdp/include,/opt/ingr/grnucsrc/include,/opt/ingr/grnucsrc/src/assoc/include_priv,/opt/ingr/modelsrc/include,/opt/ingr/isdp/isdp262_10/vds/include,/opt/ingr/isdp/isdp262_10/vds/vdinclude,/opt/ingr/isdp/isdp262_10/struct/include,/opt/ingr/isdp/isdp262_10/loft/include,/opt/ingr/isdp/isdp262_10/loft/include/private,/opt/ingr/isdp/isdp262_10/route/include,/opt/ingr/isdp/isdp262_10/route/vcinclude,/opt/ingr/isdp/isdp262_10/route/vrinclude,/opt/ingr/pdu/include

set cpoptions+=Ejlu$

" For Emacs-style editing on the command-line:
cnoremap <C-A>	<Home>
cnoremap <C-B>	<Left>
cnoremap <C-D>	<Del>
cnoremap <C-E>	<End>
cnoremap <C-F>	<Right>
cnoremap <C-N>	<Down>
cnoremap <C-P>	<Up>

set backspace=2		" allow backspacing over everything in insert mode
set cmdheight=2		" Make command line two lines high
set cinoptions=(0
set diffopt=filler,context:3,iwhite
set dir=/var/tmp
set formatoptions=tcql2
set history=20
set iskeyword-=192-255
set keymodel=startsel
set mouse=a
set ruler hidden incsearch more smartcase wildmenu
set selectmode=mouse,key
set viminfo='0,h
set wildmode=list,full

" Use the default filetype settings
filetype off

" Switch on syntax highlighting.
"set background=dark

"set t_Co=16
"set t_AF=[%?%p1%{8}%<%t3%p1%d%e%p1%{22}%+%d;1%;m
"set t_AB=[%?%p1%{8}%<%t4%p1%d%e%p1%{32}%+%d;1%;m

filetype on

if &t_Co > 2 || has("gui_running")
    syntax on
endif

" cvs indents the stuff you put in. So revision history shows comments
" extending beyond 80 characters. Restrict text width to 60 chars.
autocmd FileType cvs	set tw=60

autocmd BufRead *.I	set ft=cpp
autocmd BufRead *.sl	set ft=cpp
autocmd BufRead *.u	set ft=cpp
autocmd BufRead *.C	set ft=cpp

