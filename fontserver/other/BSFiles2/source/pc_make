# This is the 'make' file used to compile and link on the IBM PC
# NOTE: The compiler options will work for AT type machines,
#       but not for XT type machines.

# To compile on PCs with no coprocessor, use :
# cflags=/AL /Oalt /Gs /G1 /FPa

# To compile on PCs with a coprocessor, use :
# cflags=/AC /Ox /Gs /G1


# The option below is to use the coprocessor
cflags=/AC /Ox /Gs /G1 

sample.obj: sample.c
    cl -c $(cflags) sample.c

cache.obj: cache.c
    cl -c $(cflags) cache.c

cfso_ac.obj: cfso_ac.c
    cl -c $(cflags) cfso_ac.c

convert.obj: convert.c
    cl -c $(cflags) convert.c

do_funct.obj: do_funct.c
    cl -c $(cflags) do_funct.c

getrec.obj: getrec.c
    cl -c $(cflags) getrec.c

rules.obj: rules.c
    cl -c $(cflags) rules.c

speed.obj: speed.c
    cl -c $(cflags) speed.c

sample.exe: sample.obj cache.obj cfso_ac.obj convert.obj do_funct.obj getrec.obj rules.obj speed.obj
    link /E /STACK:8192 sample cache cfso_ac convert do_funct getrec rules speed;
