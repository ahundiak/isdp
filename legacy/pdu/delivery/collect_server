if (test $# = 0)
	then
	echo "Need a time argument"
	exit
	fi

for arg in 1
do
    cd ../
	chmod 755 bin/NFMfileserver
	touch $1 bin/NFMfileserver
	find \
	bin/NFMfileserver \
	-print | cpio -ov | compress > nfmfile.sun
	rcp nfmfile.sun sun@pdmdel:/usr/ws_s/i_pdu22/nfmfile.sun
	rcp nfmfile.sun sun@pdmdel:/usr/ws_s/i_pdu22dp/nfmfile.sun
	rm nfmfile.sun

done
