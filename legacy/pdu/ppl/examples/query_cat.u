#include	"PDUppl_hdr.h"

main()
{
	int	status;
	int	count;
	int	loop;
	PDMcatalogs catalogs;

status = 0;
count = 0;
loop = 0;

pdm$query_for_catalogs (
	status = &status,
	count = &count,
	catalogs = &catalogs
		);

write("number of catalogs is ",count,"\n");

if (count != 0 )
	{
	while (loop < count)
		{
		write("name ",catalogs[loop].n_catalogname," ..desc ",catalogs[loop].n_catalogdesc,"\n");
		loop = loop + 1;
		}
	}
}
