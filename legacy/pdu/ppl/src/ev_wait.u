#include "ciminimum.h"
#include "cievent.h"

extern int palresponse ;

wait_for_event( )

{

	int response ;

	palresponse = 0 ;

	ci$get( prompt = "", response = &response );
#ifdef DEBUG
	write("response in ppl: ", response , "\n");
#endif

	if (response == MOVE_ON) /* form was checked off */
		palresponse =1 ;

	else if (response == RESET) /* form was cancelled */
		palresponse = 0 ;
}

