#include "ciminimum.h"
#include "cimacros.h"
#include "PDUstr.h"
#include "PDUcommand.h"
#include "PDUerror.h"

extern struct PDUrefresh	*refresh;
extern PDUactivate();
extern PDUmessage();
extern _pdm_debug();
extern _pdm_status();
extern PDUcopy_file();

main()
{

 int             status;

 extern int      PDU_command;
 extern int      PDU_selected_rows;


 _pdm_debug("In the cpylcact.u ppl program", 0);

 /* Display command message */
 PDUmessage (PDC_M_COPY, 'c');

 PDU_selected_rows = 0;

 /* Call part copy local command */
 status = PDUcopy_file();
 _pdm_status("PDUcopy_file", status);

 if (status != PDM_S_SUCCESS)
    {
     _pdm_debug("PDUcopy_file failed", 0);

     PDUmessage(status, 's');
     exit;
    }

 /* Call activate command */
 PDU_command = PDC_M_ACTIVATE_PART;

 status = PDUactivate();
 _pdm_status("PDUactivate", status);
}
