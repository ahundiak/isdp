	find init \
		-print | sort | cpio -ov | \
		compress | fmu pdmdel.root.newroot send - /usr6/ws_s/i_pdm21src/pdminit.p

	find make \
		-print | sort | cpio -ov | \
		compress | fmu pdmdel.root.newroot send - /usr6/ws_s/i_pdm21src/pdmmake.p

	find include \
		-print | sort | cpio -ov | \
		compress | fmu pdmdel.root.newroot send - /usr6/ws_s/i_pdm21src/pdminclude.p

	find lib \
		-print | sort | cpio -ov | \
		compress | fmu pdmdel.root.newroot send - /usr6/ws_s/i_pdm21src/pdmlib.p

	find macros \
