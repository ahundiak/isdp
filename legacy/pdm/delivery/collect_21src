if (test $# = 0)
	then
	echo "Need a time argument"
	exit
	fi

for arg in 1
do
    cd ../
	chmod 755 config/initial
	chmod 644 config/initial/*

	touch $1 config/*
	touch $1 config/initial/*

	find \
	config/initial/* \
	-print | sort | cpio -ov | compress | \
	fmu pdmdel.root.newroot send - /usr6/ws_s/i_pdm21src/pdmconf.p

	find dbasupport \
		-print | sort | cpio -ov | \
		compress | fmu pdmdel.root.newroot send - /usr6/ws_s/i_pdm21src/pdmdbaspt.p

