		compress | fmu pdmdel.root.newroot send - /usr6/ws_s/i_pdm21src/pdmbom.p

	find cicocp \
		-print | sort | cpio -ov | \
		compress | fmu pdmdel.root.newroot send - /usr6/ws_s/i_pdm21src/pdmcicocp.p

	find draw \
		-print | sort | cpio -ov | \
		compress | fmu pdmdel.root.newroot send - /usr6/ws_s/i_pdm21src/pdmdraw.p

	find fmgr \
		-print | sort | cpio -ov | \
