if (test $# = 0)
	then
	echo "Need a time argument"
	exit
	fi

for arg in 1
do
    cd ../
	chmod 755 config/initial
	chmod 644 config/initial/*

	touch $1 config/*
	touch $1 config/initial/*

	find \
	config/initial/* \
	-print | sort | cpio -ov | compress > pdmconf.sun
        rcp pdmconf.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        rm pdmconf.sun

	find dbasupport \
		-print | sort | cpio -ov | compress > pdmdbaspt.sun
        	rcp pdmdbaspt.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmdbaspt.sun

	find ass \
		-print | sort | cpio -ov | compress > pdmass.sun
        	rcp pdmass.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmass.sun

	find bom \
		-print | sort | cpio -ov | compress > pdmbom.sun
        	rcp pdmbom.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmbom.sun

	find cicocp \
		-print | sort | cpio -ov | compress > pdmcicocp.sun
        	rcp pdmcicocp.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmcicocp.sun

	find draw \
		-print | sort | cpio -ov | compress > pdmdraw.sun
        	rcp pdmdraw.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmdraw.sun

	find fmgr \
		-print | sort | cpio -ov | compress > pdmfmgr.sun
        	rcp pdmfmgr.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmfmgr.sun

	find init \
		-print | sort | cpio -ov | compress > pdminit.sun
        	rcp pdminit.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdminit.sun

	find make \
		-print | sort | cpio -ov | compress > pdmmake.sun
        	rcp pdmmake.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmmake.sun

	find include \
		-print | sort | cpio -ov | compress > pdminclude.sun
        	rcp pdminclude.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdminclude.sun


	find lib \
		-print | sort | cpio -ov | compress > pdmlib.sun
        	rcp pdmlib.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmlib.sun

	find macros \
		-print | sort | cpio -ov | compress > pdmmacros.sun
        	rcp pdmmacros.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmmacros.sun

	find mulfile \
		-print | sort | cpio -ov | compress > pdmmulfile.sun
        	rcp pdmmulfile.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmmulfile.sun

	find pdmp \
		-print | sort | cpio -ov | compress > pdmpdmp.sun
        	rcp pdmpdmp.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmpdmp.sun

	find pdms \
		-print | sort | cpio -ov | compress > pdmpdms.sun
        	rcp pdmpdms.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmpdms.sun

	find reports \
		-print | sort | cpio -ov | compress > pdmrpts.sun
        	rcp pdmrpts.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmrpts.sun

	find ris \
		-print | sort | cpio -ov | compress > pdmris.sun
        	rcp pdmris.sun sun@pdmdel:/usr/ws_s/i_pdm22src
        	rm pdmris.sun

	find tools \
		-print | sort | cpio -ov | compress > pdmtools.sun
        	rcp pdmtools.sun sun@pdmdel:/usr/ws_s/i_pdm22src
