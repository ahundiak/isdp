if (test $# = 0) 
	then
	echo "Need a time argument"
	exit
	fi

for arg in 1
do
	cd ..
#	strip bin/PDMinit

	touch $1 *
        find "bin/PDMinit" \
             "bin/fix_rpt.sh" \
	-print | sort | cpio -ovc | compress > pdmbin.ssl
	ftp -n pdudev <<- END
		user root udev
		binary
		put pdmbin.ssl ${WS_DIR}/i_pdm${VERREF}sol/pdmbin.ssl
		quit
		END
        rm pdmbin.ssl
        echo


	find config \
		-print | sort | cpio -ovc | compress > pdmconf.ssl
	ftp -n pdudev <<- END
		user root udev
		binary
		put pdmconf.ssl ${WS_DIR}/i_pdm${VERREF}sol/pdmconf.ssl
		quit
		END
	rm pdmconf.ssl
	echo


	find dbasupport \
		-print | sort | cpio -ovc | compress > pdmdbaspt.ssl
	ftp -n pdudev <<- END
		user root udev
		binary
		put pdmdbaspt.ssl ${WS_DIR}/i_pdm${VERREF}sol/pdmdbaspt.ssl
		quit
		END
        rm pdmdbaspt.ssl
	echo


	find doc/signoff.doc \
             doc/signoff.wf \
		-print | sort | cpio -ovc | compress > pdmdoc.ssl
	ftp -n pdudev <<- END
		user root udev
		binary
		put pdmdoc.ssl ${WS_DIR}/i_pdm${VERREF}sol/pdmdoc.ssl
		quit
		END
	rm pdmdoc.ssl
	echo


	find training -print | sort | cpio -ovc | compress > pdmtrain.ssl
	ftp -n pdudev <<- END
		user root udev
		binary
		put pdmtrain.ssl ${WS_DIR}/i_pdm${VERREF}sol/pdmtrain.ssl
		quit
		END
	rm pdmtrain.ssl
	echo

done
