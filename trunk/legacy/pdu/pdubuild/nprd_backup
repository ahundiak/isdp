# $1:	Version of products
#	Example - Version of 2.4.X.X products would be referenced with 24

echo "Version Reference is < $1 >"
echo
# allocate remote tape device 
echo "Allocate remote tape drive"
echo ""
rtc -a -spdmdel -r/dev/rmt/mt6 -n/dev/rmt/mt6n -t10 /dev/rmt/rt0.ctl

echo
echo "Backup PDU/PDM/PDMNORM products from node pdmdel - dir /usr3/ws_s"
echo ""
cd /usr3/ws_s
find i_pdm$1 i_pdu$1 i_pdm$1src i_pdu$1src i_pdu$1dp i_pdmnorm -depth -print\
| scpio -ovud -O /dev/rmt/rt0

# deallocate drive
echo "Deallocate tape drive"
echo ""
rtc -d /dev/rmt/rt0.ctl
