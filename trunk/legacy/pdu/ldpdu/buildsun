echo $1
time="$1"

cd /
. .profile

cd $PDU
cat pdu22* | compress -d | cpio -ivmud

cd $PDM
cat pdm22* | compress -d | cpio -ivmud

cd $PDM/make
./makepdm
cd $PDM
rm pdm22*

cd $PDU/ldpdu
./makepdu
cd $PDU
rm pdu22*

#cd $PDU/ldpdu
#ld.sun
 
echo
echo "Updating command tables"
cd $PDU/config/tables
chmod 777 *_table
cp /usr4/pdu22/config/tables/*_table .

cd $PDU
./col_sun_prods $time

rm 0*
