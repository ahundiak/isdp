.PRECIOUS:

.SUFFIXES: .a .c .o

SRC = .

IPATH =  \
	-I$(PDM)/include \
	-I$(PDU)/include \
	-I$(NFM)/include \
	-I$(RIS)/include \
	-I$(DBA)/include \
	-I$(RIS)/errmsg

CC = acc -ansi -O3 

MOPT = -Dclipper=1 -D__clipper__=1

ocfiles = $(EXNUC)/bin/ocfiles


# Object files 

c_objects = \
	PDMrs_tool.o \
	PDMrs_fmgr.o \
	PDMrs_bom.o \
	PDMrs_cat.o \
	PDMrs_rpt.o

objects = \
	$(c_objects) 


# src group targets

objects_TARGET = $(PDM)/lib/PDMris.a

$(objects_TARGET): $(objects)
	@echo 
	ld -r -o $(PDM)/lib/PDMris.a $(objects)
	@echo
	@if [ -n "$(VERBOSE_RULES)" ]; \
	 then \
	     echo "\tls -ls $(PDM)/lib/PDMris.a"; \
	 fi
	@ls -ls $(PDM)/lib/PDMris.a; echo

objects_FAST: FASTstart $(objects) FASTfinish $(objects_TARGET)

PDMrs_tool.o : \
	$(SRC)/PDMrs_tool.c \
	$(RIS)/include/sql.h \
	/usr/include/memory.h \
	/usr/include/string.h \
	/usr/include/sys/_int_sarg.h \
	/usr/include/_int_sarg.h \
	/usr/include/stdio.h \
	$(PDU)/include/PDUerror.h \
	$(NFM)/include/MEMstruct.h \
	$(PDM)/include/PDMexec.h \
	$(RIS)/include/RISdbs_err.h \
	$(RIS)/include/RISerror.h \
	$(RIS)/include/RIStrn_err.h \
	$(NFM)/include/DEBUG.h \
	$(PDM)/include/SQLstruct.h \
	$(NFM)/include/MEMerrordef.h \
	$(NFM)/include/SQLerrordef.h \
	$(NFM)/include/NETerrordef.h \
	$(NFM)/include/NFMerrordef.h

