if (test $# = 0)
	then
	echo "Need a time argument"
	exit
	fi

for arg in 1
do
    cd ./pdmsrc
	touch $1 *
    chmod 774 Update.sh
    find Update.sh -print | cpio -ov | compress > pduupdate.sun
    rcp pduupdate.sun sun@pdmdel:/usr/ws_s/i_pdm22src
    rcp install.sun sun@pdmdel:/usr/ws_s/i_pdm22src
    rcp remove.sun sun@pdmdel:/usr/ws_s/i_pdm22src
    cd ..
    dates > product.dates
done
