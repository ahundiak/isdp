if (test $# = 0)
	then
	echo "Need a time argument"
	exit
	fi

for arg in 1
do
    cd ./pdmsco
        ftp -n pdudev <<- END
                user root udev
                binary
                put install.sco /usr2/ws_s/i_pdm${VERREF}sco/install.sco
                put remove.sco /usr2/ws_s/i_pdm${VERREF}sco/remove.sco
                put product.def /usr2/ws_s/i_pdm${VERREF}sco/product.def
                put README /usr2/ws_s/i_pdm${VERREF}sco/README
                quit
		END
    cd ..
    dates > product.dates
done
