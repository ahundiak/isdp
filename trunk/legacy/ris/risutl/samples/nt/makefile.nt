!include "$(RISDEVDIR)\ristools\include\makeenv.nt"

LIBS=\
	$(RISDEVDIR)\risutl\lib\nt\risforms.lib \
	$(SHAMROCKDIR)\lib\shamrock.lib \
	$(MSTOOLS)\lib\advapi32.lib

IPATH=\
	-I$(RISDEVDIR)\risutl\include \
	-I$(RISDEVDIR)\riscom\include \
	-I$(SHAMROCKDIR)\include

all: frmsamp1.exe frmsamp2.exe

cleanup:
	@-del frmsamp1.exe frmsamp2.exe

.c.exe:
	@echo Making $@
    @$(cc) -c $(IPATH) $(cdebug) $(cflags) $(cvars) $*.c
    @$(link) $(linkdebug) $(guiflags) -ignore:505 -out:$@ $*.obj $(guilibsdll) $(LIBS)
    @del $*.obj
