XFI          = /usr

FS_INCLUDE   = /usr/include/X11

XFI_INC_DIR  = $(XFI)/include/X11

CLIX_FORMS_LIB   = -lXFI_s
SUN_FORMS_LIB    = -lXFI
MIPS_FORMS_LIB   = -lXFI

CLIX_FS_LIB      = -lXFS_s
SUN_FS_LIB       = -lXFS
MIPS_FS_LIB      = -lXFS

# NOTE: This is defined in the production platform. It is not needed
# in the end user's environment.
FORMS_LIB    =

EXE_DIR      = .
EXE          = $(EXE_DIR)/dec

CC           = acc
COPT         = -ansi
IPATH        = -I$(XFI_INC_DIR) -I$(FS_INCLUDE)
CFLAGS		 = $(COPT) $(IPATH)

# For SunOS
SUN_XLIB = -lX11
# For CLIX
CLIX_XLIB = -lX11_s
# For MIPS
MIPS_XLIB = -lX11_s


BOX=`uname -s`

objs=\
        dec.o dec_fei.o dec_table.o

$(EXE): $(objs) $(FORMS_LIB)
	@if [ ! -d $(EXE_DIR) ]; \
	then \
		echo "Create $(EXE_DIR)."; \
		mkdir -p $(EXE_DIR); \
	fi;
	@if [ "$(BOX)" = "CLIX" ]; \
	then \
		echo "Build with $(CLIX_FORMS_LIB) and $(CLIX_XLIB) for $(BOX)"; \
		$(CC) $(CFLAGS) -o $(EXE) \
		  $(objs) $(CLIX_FORMS_LIB) \
		  $(CLIX_FS_LIB) $(CLIX_XLIB) \
		  -lmath -lbsd -lmalloc -lc_s; \
	elif [ "$(BOX)" = "IRIX" ]; \
	then \
		echo "Build with $(MIPS_FORMS_LIB) and $(MIPS_XLIB) for $(BOX)"; \
		$(CC) $(CFLAGS) -o $(EXE) \
		  $(objs) $(MIPS_FORMS_LIB) \
		  $(MIPS_FS_LIB) $(MIPS_XLIB) \
		  -lm -lbsd -lmalloc -lc_s; \
	elif [ "$(BOX)" = "SunOS" ]; \
	then \
		echo "Build with $(SUN_FORMS_LIB) and $(SUN_XLIB) for $(BOX)"; \
		$(CC) $(CFLAGS) -o $(EXE) \
		  $(objs) $(SUN_FORMS_LIB) \
		  $(SUN_FS_LIB) $(SUN_XLIB) -lm -lc; \
	else \
		echo "Unknown BOX $(BOX)"; \
	fi; \
	if [ "${STRIP}" ]; \
	then \
		echo "Strip $(EXE)"; \
		strip $(EXE); \
	fi; \
	echo; \
	ls -ls $(EXE); \
	echo;
