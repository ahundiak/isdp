!include "$(RISDEVDIR)\ristools\include\makeenv.nt"

IPATH=\
	-I$(RISDEVDIR)\risutl\include\
	-I$(RISDEVDIR)\riscom\include

LIBS = \
	$(RISDEVDIR)\risutl\lib\$(LIBDIR)\rislduld.lib

all: lod uld

lod: lodsamp1.exe lodsamp2.exe lodsamp3.exe lodsamp4.exe lodsamp5.exe lodsamp6.exe

uld: uldsamp1.exe uldsamp2.exe uldsamp3.exe 

cleanup:
	@-del lodsamp1.exe lodsamp2.exe lodsamp3.exe lodsamp4.exe lodsamp5.exe lodsamp6.exe
	@-del uldsamp1.exe uldsamp2.exe uldsamp3.exe

.c.exe:
	@echo Making $@
    @$(cc) -c $(IPATH) $(cdebug) $(cflags) $(cvars) $*.c
    @$(link) $(linkdebug) $(conflags) -ignore:505 -out:$@ $*.obj $(conlibsdll) $(LIBS)
    @del $*.obj
