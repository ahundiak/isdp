#
# compile the ISL version of the STRFEM source code.
#
	export FENUC="$STRFEM/fenuc"
	export COBCPPOPT="$COBCPPOPT -I$STRFEM/include -I$FENUC/include"


	chmod +x $STRFEM/stores/vf_release
	chmod +x $STRFEM/src/strfemdload
	chmod +x $STRFEM/src/cci.sf
	chmod +x $STRFEM/etc/bin/*
	chmod +w $STRFEM/config/sf.cmd

echo "\n\tCompiling $STRFEM/config/english/messages/src\n"

	cd $STRFEM/config/english/messages/src
	grmake

echo "\n\tCompiling $STRFEM/src\n"

	cd $STRFEM/src
	grmake

echo "\n\tCompiling $STRFEM/config\n"

	cd $STRFEM/config
	grmake


#
# Create executable of I/STRFEM product.
#
echo "\n\tBuiling $STRFEM/src/strfemdload\n"
	cd $STRFEM/src
	$STRFEM/src/strfemdload

#
# Compile some PPL programs.
#
echo "\n\tCompiling PPL files\n"

	$STRFEM/src/cci.sf $STRFEM/src/COconvAllEl.u
        $STRFEM/src/cci.sf $STRFEM/ppl/src/getmat.u
        $STRFEM/src/cci.sf $STRFEM/ppl/src/getprop.u
        $STRFEM/src/cci.sf $STRFEM/ppl/src/pl_stf.u
        $STRFEM/src/cci.sf $STRFEM/ppl/src/plates.u

#
# Make the build of I/STRFEM and compress result.
 
echo "\n\tCreation of I/STRFEM release\n"
	cd $STRFEM
	$STRFEM/stores/vf_release

echo "\n\tOverview of compressed I/STRFEM files\n\n"

	cd $STRFEM/ws_s
	ls -l
