 * File:	api/APIpljoint.u
 *
 * Description:
 * 
 *  This ppl places a joint using the API vs$place_joint().
 *
 * Dependencies:
 *
 * History:
 *	MM/DD/YY	AUTHOR		DESCRIPTION
 *			i-paris		creation date
 *	04/17/1998	Manoj 		CR 1798000807
 *                                      Facility to assign 
 *                                      1. Field weld 
 *					2. Weld Position 
 *                                      3. Shrinkage Ratio
 *
 ***************************************************************************/

#include "OMminimum.h"
#include "cieveryone.h"
#include "cievent.h"
#include "cilocate.h"
#include "cisend.h"
#include "vsAPImacros.h"

extern void printf() ;

/*----------------------------------------------------------------------------*/
wakeup() { message( "API: Place Joint" ) ; }
/*----------------------------------------------------------------------------*/
main() {
	long		 sts,
			 msg ;
	struct GRid	 elemId[2],
			 jointId ;
	struct GRmd_env  elemEnv[2] ;
	double		 shrk ;

	while( TRUE ) {
	ci$locate(
		prompt		= "Identify first plate/beam/stiffener",
		classes 	= "VSpart",
		properties	= LC_LC_ONLY | LC_DP_ONLY | LC_RW,
		owner_action	= LC_RIGID_COMP  |
				  LC_RIGID_OWNER | LC_FLEX_COMP |
				  LC_FLEX_OWNER  | LC_REF_OBJECTS,
		obj		= &elemId[0].objid,
		osnum		= &elemId[0].osnum,
		md_env		= &elemEnv[0] ) ;

	ci$locate(
		prompt		= "Identify second plate/beam/stiffener",
		classes 	= "VSpart",
		properties	= LC_LC_ONLY | LC_DP_ONLY | LC_RW,
		owner_action	= LC_RIGID_COMP  |
				  LC_RIGID_OWNER | LC_FLEX_COMP |
				  LC_FLEX_OWNER  | LC_REF_OBJECTS,
		obj		= &elemId[1].objid,
		osnum		= &elemId[1].osnum,
		md_env		= &elemEnv[1] ) ;

	shrk = 3.5 ;
	sts = vs$place_joint( msg		= &msg,
			      elemId		= elemId,
			      elemEnv		= elemEnv,
			      fieldWeld		= TRUE,
			      weldPosition	= 2, 	
			      shrinkage		= shrk, 	
			      jointId		= &jointId ) ;

	if( !( sts & 1 & msg ) ) printf( "Error in placement of joint\n" ) ;
	else printf( "Constructed joint : [%d,%d]\n", jointId.osnum,
						      jointId.objid ) ;
	}
}
/*----------------------------------------------------------------------------*/
