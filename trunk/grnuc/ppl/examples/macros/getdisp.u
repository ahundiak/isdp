#include "stdio.h"
#include "ciminimum.h"
#include "cimacros.h"
#include "igr.h"
#include "grdpbdef.h"
#include "grdpb.h"
#include "grdpbmacros.h"

extern GRdpb_put(), GRdpb_get();

main()
{
	IGRlong msg, size, nret;
	struct IGRdisplay disp;
	IGRint co,wt,st;

	size = sizeof( struct IGRdisplay );

	gr$get_active_display( msg = &msg,
				sizbuf = &size,
				buffer = &disp,
				nret = &nret );

	co = disp.color;
	wt = disp.weight;
	st = disp.style;

	write("Active Color = ",co,"\n");
	write("Active Weight = ",wt,"\n");
	write("Active Style = ",st,"\n");

}
