/*									*/
/*	Program: placecapsld.u		Macro:md$place_cap_solid()	*/
/*									*/
/*	Defined in: ci_solid.h						*/
/*									*/
/*	Comments: Works with associative surfaces.			*/
/*									*/
/************************************************************************/

#include "ciminimum.h"
#include "cimacros.h"
#include "ci_solid.h"

main()
{

        struct GRid     SURFACE, SOLID;
        char ele_name[255];

        ci$locate( obj   = &SURFACE.objid,
                   osnum = &SURFACE.osnum,
                   classes = "EMSsurface",
		   owner_action = LC_RIGID_COMP | LC_ASSOCIATIVE,
                   prompt= "Identify surface to cap");

        strcpy(ele_name, "cap_solid");  
        md$place_cap_solid( 
                        GRid_out = &SOLID,
                        GRid_in  = SURFACE,
                        name = ele_name, 
                        disp = DRAW);
}
