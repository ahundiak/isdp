/************************************************************************/
/*									*/
/*	Program: inq_win.u		Macro: dp$inq_window_info	*/
/*									*/
/*	Defined in: dpezmac.h						*/
/*									*/
/*	Comments: Specify a window by name to get its view origin,	*/
/*		  rotation, volume, active z and xform matrix.		*/
/*									*/
/************************************************************************/
#include        "stdio.h"
#include        "OMerrordef.h"
#include        "msdef.h"
#include	"dpezmac.h"
 
extern DP_inq_win_nam();

main()
{

int	ms,sts;
double	v_org[3];
double	v_rot[16];
double	v_vol[6];
double	wld_vol[6];
double  acti_z;
double	wtv[16];

sts = dp$inq_window_info(
		    msg	= &ms,
		    window_name = "front",
		    view_origin = v_org,
		    view_rotation = v_rot,
		    vw_volume = v_vol,
		    wld_volume = wld_vol,
		    act_z = &acti_z,
		    world_to_view = wtv
	          );

if( ms == MSSUCC )
{
	
write(" v_org 	 = ",v_org,"\n");
write(" v_rot 	 = ",v_rot,"\n");
write(" v_vol 	 = ",v_vol,"\n");
write(" wld_vol  = ",wld_vol,"\n");
write(" acti_z 	 = ",acti_z,"\n");
write(" wtv 	 = ",wtv,"\n");
}

else
	status("Error Return from Macro");

}	/* End Main */
