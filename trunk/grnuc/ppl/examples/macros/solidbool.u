#include "ciminimum.h"
#include "cimacros.h"
#include "ci_solid.h"

main()
{
        struct GRid     SOLIDS[15], SOLID;
        IGRint          i;
        char            ele_name[255];

        i = 0;
        while(1)
        {

                if(!ci$locate(  obj     = &SOLIDS[i].objid,
                                osnum   = &SOLIDS[i].osnum,
				owner_action = LC_RIGID_COMP | LC_ASSOCIATIVE,
                                classes = "EMSsolid",
                                prompt  = "Identify solid"))break;

                if( i > 13 ) break;

                i = i + 1;
        }
        strcpy(ele_name, "bool_op");
        md$solid_boolean(
                        num_objects = i,      
                        GRids_in = SOLIDS,
                        op_type = UNION,   
                        GRid_out = &SOLID,
                        name = ele_name,
                        disp = DRAW);

}
