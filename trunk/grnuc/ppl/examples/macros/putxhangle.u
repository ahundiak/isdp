#include	"ciminimum.h"
#include	"cimacros.h"
#include	"grdpbdef.h"
#include	"grdpbmacros.h"			/* defined */
#include	"msdef.h"			/* MSSUCC */

extern	int	GRdpb_put();

main()
{
   IGRlong	msg, siz, angle;
   IGRdouble	buf;

   siz = sizeof(buf);

   ci$get(prompt = "Enter angle for xhatch (degrees): > ", value = buf);

   buf = buf * 0.01745;				// xhatch angle in radians

   gr$put_xhatch_angle(
	msg	= &msg,
	sizbuf	= &siz,
	buffer	= &buf
		   );

   if (msg == MSSUCC)
	write("success\n");
   else
	write("failure\n");

}	/* End Main */
