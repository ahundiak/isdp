#include "stdio.h"
#include "ciminimum.h"
#include "cimacros.h"
#include "igr.h"
#include "igrdp.h"
#include "grdpbdef.h"
#include "grdpbmacros.h"


extern GRdpb_put();

main()
{
	IGRlong msg, size;
	struct IGRdisplay disp;

	message("Put Active Display");

	disp.color = 3;
	disp.weight = 4;
	disp.style = 5;

	size = sizeof( struct IGRdisplay );
	
	gr$put_active_display( msg = &msg,
				sizbuf = &size,
				buffer = &disp );

}
