#include "ciminimum.h"
#include "cimacros.h"
#include "cieveryone.h"
#include "msdef.h"
#include "ciexec.h"

GRobj 		ci_mac_bib_FileId;


#define  MACRO_NAME    "cpyalong"   /* Name of the macro                      */
#define  NB_TEMPLATE   4            /* Number of template of the macro        */

struct GRid temp_obj[NB_TEMPLATE];  /* Template objects of the macro          */
GRobj  macro_def_id;                /* Identifier of the macro definition     */
struct GRmd_env		MOD_ENV;
char			loc_mes[80],loc_prompt[80], exp_prompt[80];



int    stat;                   /* Returned status of the definition       */
double			exp_default;
int             	suc;


extern ASmake_source_from_env();


main()
{


step0:
       strcpy(loc_prompt,"enter expression number of copy");
       strcpy(exp_prompt,"enter value");
       exp_default = 1.0;
       push (char *)&suc,loc_mes,loc_prompt,exp_prompt,exp_default,
            (char *)&temp_obj[0];
       ci$run( file_id   = &ci_mac_bib_FileId,
 	       entry     = "loc_exp" );
       if( suc != 1 ) exit;


step1:
  if ( !ci$locate ( prompt       = "Identify the neutral curve",
                    properties   = LC_LC_ONLY | LC_DP_ONLY | LC_RW,
                    owner_action = LC_RIGID_COMP
                                      | LC_RIGID_OWNER | LC_FLEX_COMP
                                      | LC_FLEX_OWNER  | LC_REF_OBJECTS,
		    obj          = &(temp_obj[2].objid),
		    osnum        = &(temp_obj[2].osnum),
                    classes      = "GRcurve",
                    md_env       = &MOD_ENV  ) ) goto step0;

     ASmake_source_from_env( &temp_obj[2],&MOD_ENV,&temp_obj[2] );	

step2:
  if ( !ci$locate ( prompt       = "Identify the from coordinate system",
                    properties   = LC_LC_ONLY | LC_DP_ONLY | LC_RW,
                    owner_action = LC_RIGID_COMP
                                      | LC_RIGID_OWNER | LC_FLEX_COMP
                                      | LC_FLEX_OWNER  | LC_REF_OBJECTS,
		    obj          = &(temp_obj[1].objid),
		    osnum        = &(temp_obj[1].osnum),
                    classes      = "GRlbsys",
                    md_env       = &MOD_ENV  ) ) goto step1;

     ASmake_source_from_env( &temp_obj[1],&MOD_ENV,&temp_obj[1] );	

  while(1)
  {
	  if ( !ci$locate ( prompt       = "Identify object to copy",
                            properties   = LC_LC_ONLY | LC_DP_ONLY | LC_RW,
			    owner_action = LC_RIGID_COMP
                                           | LC_RIGID_OWNER | LC_FLEX_COMP
                                           | LC_FLEX_OWNER  | LC_REF_OBJECTS,
			    obj          = &(temp_obj[3].objid),
			    osnum        = &(temp_obj[3].osnum),
                            md_env       = &MOD_ENV ) ) goto step2;

     	  ASmake_source_from_env( &temp_obj[3],&MOD_ENV,&temp_obj[3] );	

	  macro_def_id	= NULL_OBJID;

   	  ci$get_module_info(md_env = &MOD_ENV);

	  ci$send( msg	    = message nci_macro.init( &stat,
						      0,
						      MACRO_NAME,
						      NB_TEMPLATE,
						      temp_obj,
						      NULL,
						      &MOD_ENV ),
		   targetid = macro_def_id,
		   targetos = MOD_ENV.md_id.osnum,
		   construct= TRUE ) ;

   	  if( stat == 0 ){
		write("placement of nci_macro \"cpyalong\" failed\n");
		status("placement of nci_macro \"cpyalong\" failed");
      		ci$send(msg = message Root.delete(0),
	      		targetid = macro_def_id,
	      		targetos = MOD_ENV.md_id.osnum );
   	  }

  }
}

/*==========================================================================*/
init(){

 	strcpy(loc_mes,"<Assoc> Copy Element Along Curve");

 	ci$load ( file_name = "ci_mac_bib.u",
		  load      = LOAD,
	  	  file_id   = &ci_mac_bib_FileId,
		  stat      = &suc );
	if( suc != CI_S_SUCCESS ) exit;

}

wakeup(){
	message(loc_mes);
}

