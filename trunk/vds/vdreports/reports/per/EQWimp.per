DATABASE training12

SCREEN SIZE 24 BY 80
{
                    ============================================
                    |    EQUIPMENT WEIGHT CONTROL WORKSHEET    |
                    ============================================

REQUEST BY          [f0 ]
DESCRIPTION         [f1                                      ]
		    [f2                                      ]

PROJECT NUMBER	    [f3                  ]

ASSEMBLY CATALOG    [f4                  ]
ASSEMBLY NAME       [f5                            ]
ASSEMBLY VERSION    [f6          ]                     REFERENCE COORDINATE
                                                       ====================
ZONE NUMBER         [f7  ]                             L  [f10       ] INCH
APPROVAL STATUS     [f8      ]                         T  [f11       ] INCH
CONSTRUCTION STATUS [f9      ]                         V  [f12       ] INCH
}
END

TABLES
equip_dynamic="nfmadmin".equip_dynamic,
vds_project="nfmadmin".vds_project

ATTRIBUTES
f0  = FORMONLY.rpt_request TYPE char,
      COMMENTS = "Enter your initials", REQUIRED;
f1  = FORMONLY.rpt_descript1 TYPE char, COMMENTS = "First description";
f2  = FORMONLY.rpt_descript2 TYPE char, COMMENTS = "Second description";
f3 = vds_project.prj_number, COMMENTS ="Project Identification Number",REQUIRED;
f4  = equip_dynamic.assembly_cat, COMMENTS = "Assembly catalog";
f5  = equip_dynamic.assembly_nam, COMMENTS = "Assembly name";
f6  = equip_dynamic.assembly_ver, COMMENTS = "Assembly version";
f7  = equip_dynamic.zone_number,  COMMENTS = "Zone number";
f8  = equip_dynamic.apprv_stat,   COMMENTS = "Approval status";
f9  = equip_dynamic.constr_stat,  COMMENTS = "Construction status";
f10  = FORMONLY.def_lcog TYPE FLOAT, DEFAULT = 0.0, FORMAT = "------.---",
      COMMENTS = "Center of Gravity, lateral coordinate point";
f11 = FORMONLY.def_tcog TYPE FLOAT, DEFAULT = 0.0, FORMAT = "------.---",
      COMMENTS = "Center of Gravity, transversal coordinate point";
f12 = FORMONLY.def_vcog TYPE FLOAT, DEFAULT = 0.0, FORMAT = "------.---",
      COMMENTS = "Center of Gravity, vertical coordinate point";
END

INSTRUCTIONS
DELIMITERS "[]"
SCREEN RECORD sc_form ( FORMONLY.rpt_request,
			FORMONLY.rpt_descript1,
			FORMONLY.rpt_descript2,
			vds_project.prj_number,
		        equip_dynamic.assembly_cat,
		        equip_dynamic.assembly_nam,
                        equip_dynamic.assembly_ver,
		        equip_dynamic.zone_number,
                        equip_dynamic.apprv_stat,
                        equip_dynamic.constr_stat,
			FORMONLY.def_lcog,
			FORMONLY.def_tcog,
			FORMONLY.def_vcog )
END
