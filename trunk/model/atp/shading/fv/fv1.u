#include "ciminimum.h"
#include "cimacros.h"
#include "fi.h"
#include <stdio.h>
#include <string.h>

extern char *getenv();

main()
{
	double pt[3];
	struct FI_data_st formData;
        char   str[20], *atp_si_str;
	int    atp_si;

        strcpy(str, "ATP_SI");
        atp_si = 0;
        if ( (atp_si_str = getenv(str)) != NULL)
            if (strcmp(atp_si_str, "1") == 0)
                atp_si = 1;

	fprintf(stderr, "\nFV1.LOG: \n\n");

	/*-------------------*/
	/* fit top wf window */
	/*-------------------*/

	ci$put(string = "f v");
	//"GRFtV" "Fit View"

	ci$put(string = "top");

	ci$put( cmd = "cl st");

	ci$put(cmd = "ci=snapshot top");

	if (atp_si)
 	    save_image("tmp/top11.rgb", "top");	

	/*--------------------------*/
	/* fit iso sm-shaded window */
	/*--------------------------*/

	ci$put(string = "s w d m");
	//"HSTgVDsMd" "Set Window Display Mode"

	ci$put(string = "iso");

	ci$put( cmd = "cl st");

	ci$put(string = "f v");
	//"GRFtV" "Fit View"

	ci$put(string = "iso");

	ci$put( cmd = "cl st");

	ci$put(cmd = "ci=snapshot iso");

	if (atp_si)
 	    save_image("tmp/iso12.rgb", "iso");	

	/*-----------------------------------------*/
	/* convert front window to perspective rhl */
	/* fit all windows			   */
	/*-----------------------------------------*/

	ci$put(string = "s w d m");
	//"HSTgVDsMd" "Set Window Display Mode"

	ci$put( cmd = "st d");
	//"GRStFr" "Status Display Form"

	formData.label = 16;
	formData.type = FI_STATE;
	formData.index = 1;
	formData.max_index = 0;
	formData.select_flag = FI_EDIT_NOSELECT;
	formData.sts = 0;
	formData.value.state = 1;
	ci$put (form = "HSWinRegion",
		gadget = &formData);

	formData.label = 1;
	formData.type = FI_STATE;
	formData.index = 1;
	formData.max_index = 0;
	formData.select_flag = FI_EDIT_NOSELECT;
	formData.sts = 0;
	formData.value.state = 1;
	ci$put (form = "HSWinRegion",
		gadget = &formData);

	ci$put(string = "front");

	ci$put( cmd = "cl st");

	ci$put(string = "c p p to persp");
	//"GRCPlPrTPs" "Convert Parallel Projection to Perspective"

	ci$put(string = "front");

        ci$put( cmd = "cl st");

	ci$put(string = "f v");
	//"GRFtV" "Fit View"

        ci$put(string = "*");

        ci$put( cmd = "cl st");

	ci$put(cmd = "ci=snapshot top iso front right");

	if (atp_si)
	{
 	    save_image("tmp/top13.rgb",   "top");	
 	    save_image("tmp/iso13.rgb",   "iso");	
 	    save_image("tmp/front13.rgb", "front");	
 	    save_image("tmp/right13.rgb", "right");	
	}

}

save_image(filename, win_name)
        char *filename, *win_name;
{ 
	ci$put(cmd = "s i");

	ci$put(string = filename);

	ci$put(string = "w");

	ci$put(string = win_name);

        ci$put(response = TERMINATE);
}
                     
