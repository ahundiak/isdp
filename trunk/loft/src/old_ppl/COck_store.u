

#include <stdio.h>
#include "cieveryone.h"
#include "cimacros.h"

extern	long VLgetStandSize();

main()
{
IGRdouble	usrVal[2], stVal[2];
IGRlong		sts;
IGRchar		stat_msg[512];

	message(" Check Standard Size of Plate ");

step0 :

	ci$get(	value	= usrVal[0],
		prompt	= " enter plate Length " );

	ci$get(	value	= usrVal[1],
		prompt	= " enter plate Width " );

	sts = VLgetStandSize( "plate_store", NULL, 2, usrVal, stVal );

	if( sts & 1 )
		sprintf( stat_msg, " LxW :(%.2f/%.2f) standard : (%.2f,%.2f)",
				usrVal[0], usrVal[1], stVal[0], stVal[1] );

	else	sprintf( stat_msg, " LxW : (%.2f,%.2f) are to big ",
							usrVal[0], usrVal[1] );

	status( stat_msg );

goto step0;

return 1;
}
