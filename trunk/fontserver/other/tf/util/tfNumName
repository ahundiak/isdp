# Convert a typeface number to a typeface name using the typeface database
# file.
#
# $1 should be a typeface number.
# $2 should be the typeface database file.


integer num number
num=$1

if [ $# -lt 2 ]
then
	echo "Usage:  $0 {tfNum} {tfList}"
	exit 1
fi

# Find the typeface number in the typeface database file
while [ "$num" != "$number" ]
do
	if read number
	then :
	else
		exit 1
	fi
	read name
	read desc
	read class
	read line
done < $2
echo $name
exit 0
