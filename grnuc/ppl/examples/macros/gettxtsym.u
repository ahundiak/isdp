#include "stdio.h"
#include "ciminimum.h"
#include "cimacros.h"

#include "grdpb.h"
#include "grdpbdef.h"
#include "grdpbmacros.h"

extern GRdpb_get();

main()
{	

IGRlong 		msg, size, nret, sts;
struct GRdpb_text_symb 	buffer;

size = sizeof( buffer );

sts = gr$get_text_symb( msg = &msg,
			    sizbuf = &size,
			    buffer = &buffer,
			    nret = &nret
			    );

if( sts & msg & 1 )
	write("Success: Active Font = ",buffer.Active_font,
                        " just. = ",buffer.Active_just,
                        "\n width = ",buffer.Active_width,
                        " height = ",buffer.Active_height,
                        "\n line spacing = ",buffer.Active_linespac,"\n");
else
	write("Macro call failed\n");

}

