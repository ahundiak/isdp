/****************************************************************************/
/*								            */
/*  Program:  cnvworld.u						    */
/*  Macro(s):	cs$cvt_to_wld						    */
/*  Defined in:   csmacros.h				            	    */
/*  Comments:  This example converts the input active coordinate xyz values */
/*	       to the world coordinate values. Define a new active coord sys*/
/*	       before running this example.				    */
/****************************************************************************/
#include "ciminimum.h"
#include "cimacros.h"
#include "csmacros.h"

extern GRcscvt_coords();

main()

{
	IGRlong msg;
	double wld[3],lcl[3];
	short osnum;

	ci$get_module_info( md_os = &osnum );

	ci$get( value = lcl[0], prompt = "Input Active X Coordinate");
	ci$get( value = lcl[1], prompt = "Input Active Y Coordinate");
	ci$get( value = lcl[2], prompt = "Input Active Z Coordinate");

	cs$cvt_to_wld( msg = &msg,
			npts = 1,
			cs_os = osnum,
			lcl = lcl,
			wld = wld );

	write("wld x:",wld[0]," wld y:",wld[1]," wld z:",wld[2],"\n");

}

