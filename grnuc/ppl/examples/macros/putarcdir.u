/************************************************************************/
/*									*/
/*	Program: putarcdir.u		Macro: gr$put_arc_direction()	*/
/*									*/
/*	Defined in: grdpbmacros.h					*/
/*									*/
/*	Comments: Arc direction value: 1 = ccw; 0 = cw;	default: ccw; 	*/
/*	test with "place arc with center and 2 points" after executing 	*/
/*	program								*/
/*									*/
/************************************************************************/

#include	"ciminimum.h"
#include	"cimacros.h"
#include	"grdpbdef.h"			/* needed */
#include	"grdpbmacros.h"			/* defined */
#include	"OMerrordef.h"			/* extra */

extern	int	GRdpb_put();

main()
{
   IGRlong		ms;
   IGRlong		siz;
   IGRboolean		buf;
   IGRint		sts, tmp;

   siz = sizeof(buf);

   ci$get(value = tmp, prompt = "Select curve direction: ccw = 1; cw = 0");

   buf = tmp;	// Arc Direction; 1 = ccw; 0 = cw

   sts = gr$put_arc_direction(
		msg	= &ms,
		sizbuf	= &siz,
		buffer	= &buf
		   );
   
   if (sts == OM_S_SUCCESS)
	if (tmp == 0)
	   write("Arc direction changed to cw (0) successfully\n");
	else 
	   write("Arc direction changed to ccw (1) successfully\n");
	
   else
	write("Macro:  gr$put_arc_direction Failed\n");

}	/* End Main */
