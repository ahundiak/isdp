#include "stdio.h"
#include "ciminimum.h"
#include "cimacros.h"
#include "dimplace.h"

main()
{

	double brk_pt[3], lead_pt[3], sel_pt[3], ori_pt[3], mea_pt[3];
	IGRchar view[10];
	GRobj ori_ele, mea_ele, next_ele, dim_objid;

	ci$locate( obj = &ori_ele,
			 accept_point = ori_pt,
			 prompt="Identify Origin Element" );

	ci$locate( obj = &mea_ele, 
			accept_point = mea_pt,
			prompt="Identify Measurement Element" );

	ci$get( point = sel_pt, prompt = "Enter Measurment Quadrant" );

	ci$get( point = lead_pt, prompt = "Enter Dimension Leader Point" );

	ci$get( string = view, prompt = "Enter View Name for Dimension" );

	dm$place_angular_dimension(
				  type = STACKED_ANGULAR,
				  ori_ele = ori_ele, 
				  ori_pt = ori_pt,
				  mea_ele = mea_ele, 
				  mea_pt = mea_pt,
				  view = view,
				  sel_pt  = sel_pt,
				  break_pt = brk_pt, 
				  leader_pt = lead_pt
				  );

}

