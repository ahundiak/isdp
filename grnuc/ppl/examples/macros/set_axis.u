#include "stdio.h"
#include "ciminimum.h"
#include "cimacros.h"
#include "dimplace.h"

main()
{

GRobj obj;
IGRdouble pt[3];

	ci$locate( obj = &obj, 
			classes = "GR3dlineseg",
			prompt ="Identify Dimension Measurement Axis",
			snap_point = pt,
			acc_prompt = "Accept with Point on Element");

	dm$set_axis( view = "iso",
			obj = obj,
			point = pt
			);
}
