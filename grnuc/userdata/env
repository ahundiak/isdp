### Set up your alias
alias -x ls='ls -C -F'

### Set up general requirements
export HISTFILE=$HOME/.history
export EDITOR=vi
export FCEDIT=${EDITOR}
export VISUAL=${EDITOR}

### Setup Intergraph Specific requirements for Mechanical Applications
export INGRHOME=/opt/ingr
export PATH=$PATH:$INGRHOME/bin:$INGRHOME/bin/X11:/usr/openwin/bin:$HOME/bin
export LD_LIBRARY_PATH=/usr/openwin/lib
export LD_LIBRARY_PATH=$INGRHOME/lib:$LD_LIBRARY_PATH

### Setup a Prompt field
if [ `id | cut -c5` = 0 ]
then
  PS1='$PWD # '
else
  PS1='$PWD > '
fi
export PS1

