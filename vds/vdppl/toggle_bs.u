/*
 * Global variable for controlling execution of BSPMATH data reduction
 *	function : BSr_approxs() for smaller data in BSbrapproxs()
 *
 *	if (VDcv_reduce == 0)   ==>>   NO  execution (DEFAULT) of BSr_approxs()
 *	if (VDcv_reduce == 1)   ==>>   YES execution
 */

extern int VDcv_reduce;

main()
{
  if (VDcv_reduce == 0)
  {
    VDcv_reduce = 1;
    status("Special Reduction is ON");
  }
  else
  {
    VDcv_reduce = 0;
    status("Special Reduction is OFF");
  }
}

