#include "ciminimum.h"
#include "cimacros.h"
#include "EMSmsgdef.h"
#include "msdef.h"
#include "ciexec.h"

GRobj 		ci_mac_bib_FileId;

struct GRid 	TEMP[3];
GRobj 		MAC1;
int 		suc ;
GRobj 		RAD,DIR;
char            txt[20],parname[80],dirname[80],name[80];
double		number;
double		exp_default;
char		loc_mes[80],loc_prompt[80], exp_prompt[80], exp_class[40];
struct GRmd_env	MOD_ENV;

extern ASmake_source_from_env();

main()
{
 while(1)
 {

pt1:    if(!ci$locate( prompt       = "Identify center point 1",
		       classes      = "GRpoint",
                       properties   = LC_LC_ONLY | LC_DP_ONLY | LC_RW,
                       owner_action = LC_RIGID_COMP
                                      | LC_RIGID_OWNER | LC_FLEX_COMP
                                      | LC_FLEX_OWNER  | LC_REF_OBJECTS,
	               obj          = &(TEMP[0].objid),
                       osnum        = &(TEMP[0].osnum),
		       md_env	    = &MOD_ENV)) exit;

     	  ASmake_source_from_env( &TEMP[0],&MOD_ENV,&TEMP[0] );	


pt3:      strcpy(loc_prompt,"Identify radius point/key in rad parameter");
          strcpy(exp_prompt,"enter radius value");
          exp_default = 1.0;
          strcpy(exp_class,"GRpoint");       
          push (char *)&suc,loc_mes,loc_prompt,exp_prompt,exp_default,
               exp_class,(char *)&TEMP[1];
          ci$run( file_id = &ci_mac_bib_FileId,
 	          entry   = "loc_obj_exp" );

          switch(suc)
          {
       	    case 0:
		goto pt1;
            case 1:
         	/* keyrad=1; */
     		ASmake_source_from_env( &TEMP[1],&MOD_ENV,&TEMP[1] );	
	        break;
            case 2:
         	/* keyrad=0; */
	        break;
	  }

	TEMP[1].osnum = TEMP[0].osnum;

      MAC1 = NULL_OBJID;

      ci$get_module_info(md_env = &MOD_ENV);

      ci$send(msg = message nci_macro.init(
		&suc,0, "srf_sphere", 2, TEMP, NULL,&MOD_ENV),
	            	targetid = MAC1,
			targetos = MOD_ENV.md_id.osnum );

      if( suc == 0 ){
		write("placement of nci_macro \"srf_sphere\" failed\n");
		status("placement of nci_macro \"srf_sphere\" failed");
      		ci$send(msg = message Root.delete(0),
			targetid = MAC1,
			targetos = MOD_ENV.md_id.osnum );
      }
 }
}

/*==========================================================================*/
init(){

    	strcpy(loc_mes,"<Assoc> Place Sphere by Center and Radius");

 	ci$load ( file_name = "ci_mac_bib.u",
		  load      = LOAD,
	  	  file_id   = &ci_mac_bib_FileId,
		  stat      = &suc );
	if( suc != CI_S_SUCCESS ) exit;
}

wakeup(){
	message(loc_mes);
}


