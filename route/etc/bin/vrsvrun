File="IROUTEconf"
File1="IROUTEincl"
File2="IROUTEppl"
File3="IROUTEc400"
CurDir=$PWD

echo "		Saving I/ROUTE runtime in $CurDir/$File "
echo "		                          $CurDir/$File1 "
echo "		                          $CurDir/$File2 "
echo
echo
echo " I/ROUTE located in : $ROUTE "
echo
echo

cd $ROUTE
find config bin ! -name *.o -print |\
	cpio -ov |\
	compress > $CurDir/$File

find include -print |\
	cpio -ov |\
	compress > $CurDir/$File1

find ppl -print |\
	cpio -ov |\
	compress > $CurDir/$File2

find config bin -name *.o -print |\
	cpio -ov |\
	compress > $CurDir/$File3

